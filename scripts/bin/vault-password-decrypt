#!/usr/bin/env bash
set -euo pipefail

VAULT_KEY=${VAULT_KEY:-"${HOME}/.ansible/keys/ansible.gpg"}

# Fast exit if the file does not exist
if [[ ! -f "${VAULT_KEY}" ]]; then
  (>&2 echo "FATAL: Unable to find the vault key file (${VAULT_KEY})")
  exit 1
fi

gpg \
  --quiet \
  --batch \
  --use-agent \
  --decrypt \
  "${VAULT_KEY}"
