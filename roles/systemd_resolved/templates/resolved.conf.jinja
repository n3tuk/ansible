# See resolved.conf(5) for details.

[Resolve]
DNS=1.1.1.1#cloudflare-dns.com 1.0.0.1#cloudflare-dns.com 2606:4700:4700::1111#cloudflare-dns.com 2606:4700:4700::1001#cloudflare-dns.com
FallbackDNS=8.8.8.8#dns.google 8.8.4.4#dns.google 2001:4860:4860::8888#dns.google 2001:4860:4860::8844#dns.google
DNSOverTLS=yes
DNSSEC=yes

# Allow the above DNS endpoints to resolve all domain names, with single
# addresses appended with {{ ansible_facts.domain }} before requesting
Domains={{ ansible_facts.domain }} ~.

MulticastDNS=no
LLMNR=no

Cache=yes
ReadEtcHosts=yes
CacheFromLocalhost=no
StaleRetentionSec=0

DNSStubListener=yes
