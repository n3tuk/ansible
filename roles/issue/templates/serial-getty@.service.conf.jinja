# {{ ansible_managed }}

# Override the agetty comment to include the longer version of the hostname in
# the prompt, to remove hints about numeral lock or caps lock, to allow the
# screen to be cleared, and to wait for input from the serial console before
# returning the contents of the /etc/issue file

[Service]
ExecStart=
ExecStart=-/sbin/agetty -o '-p -- \\u' --keep-baud 115200,57600,38400,9600 --long-hostname --nohints --wait-cr - $TERM
