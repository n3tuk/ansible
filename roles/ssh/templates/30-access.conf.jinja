# {{ ansible_managed }}

UsePAM yes
LoginGraceTime 15s
PermitRootLogin {{ ssh_server_permit_root_login | default('no') }}
StrictModes yes
MaxAuthTries 6
MaxSessions 10

PubkeyAuthentication yes
AuthorizedKeysFile .ssh/authorized_keys
PasswordAuthentication no
PermitEmptyPasswords no
ChallengeResponseAuthentication no
IgnoreRhosts yes

AcceptEnv LANG LC_*
