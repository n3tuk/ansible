# {{ ansible_managed }}

[Unit]
Description=Caddy
Documentation=https://caddyserver.com/docs/
After=network.target network-online.target
Requires=network-online.target
StartLimitIntervalSec=14400
StartLimitBurst=10

[Service]
Type=notify
User=caddy
Group=caddy
Environment=XDG_DATA_HOME=/var/lib
Environment=XDG_CONFIG_HOME=/etc
ExecStartPre=/usr/local/bin/caddy validate --config "{{ caddy_config_path }}/{{ caddy_config_file }}"
ExecStart=/usr/local/bin/caddy run --environ --config "{{ caddy_config_path }}/{{ caddy_config_file }}"
ExecReload=/usr/local/bin/caddy reload --config "{{ caddy_config_path }}/{{ caddy_config_file }}" --force
TimeoutStopSec=5s
LimitNOFILE=1048576
LimitNPROC=512

# Do not allow the process to be restarted in a tight loop. If the
# process fails to start, something critical needs to be fixed.
Restart=on-abnormal

# Hardening options
AmbientCapabilities=CAP_NET_BIND_SERVICE
CapabilityBoundingSet=CAP_NET_BIND_SERVICE
DevicePolicy=closed
LockPersonality=true
MemoryAccounting=true
MemoryDenyWriteExecute=true
NoNewPrivileges=true
ProcSubset=pid
ProtectClock=true
ProtectControlGroups=true
PrivateDevices=true
ProtectHome=true
ProtectHostname=true
ProtectKernelLogs=true
ProtectKernelModules=true
ProtectKernelTunables=true
ProtectProc=invisible
ProtectSystem=strict
PrivateTmp=true
RemoveIPC=true
ReadWritePaths=/etc/caddy /var/lib/caddy /run /var/log/caddy
RestrictNamespaces=true
RestrictRealtime=true
RestrictSUIDSGID=true

[Install]
WantedBy=multi-user.target
