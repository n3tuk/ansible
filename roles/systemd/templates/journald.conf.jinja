# {{ ansible_managed }}
#
# See journald.conf(5) for details.

[Journal]
Storage=auto
Compress=yes
Seal=no
Audit=yes

# Keep all logs for system services and users in the same files
SplitMode=none

# Define the space usage for journald
SystemMaxUse={{ systemd_journald_max_use }}
SystemKeepFree=10%

RuntimeMaxUse=16M
RuntimeKeepFree=75%

MaxRetentionSec=30day
MaxFileSec=1day

ForwardToSyslog=no
ForwardToKMsg=no
ForwardToConsole=no
ForwardToWall=yes
TTYPath=/dev/console

MaxLevelStore=debug
MaxLevelSyslog=debug
MaxLevelKMsg=notice
MaxLevelConsole=info
MaxLevelWall=emerg
